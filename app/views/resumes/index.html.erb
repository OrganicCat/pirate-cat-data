<h1>Resume</h1>

<table>
  <tr>
    <th>Title</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Header Content</th>
    <th>Main Content</th>
    <th>Summary Content</th>
    <th colspan="3"></th>
  </tr>

<% @resumes.each do |resume| %>
  <tr>
    <td><%= resume.title %></td>
    <td><%= resume.first_name %></td>
    <td><%= resume.last_name %></td>
    <td><%= resume.header_content %></td>
    <td><%= resume.main_content %></td>
    <td><%= resume.summary_content %></td>
    <td><%= link_to 'Show', resume %></td>
    <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
    <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Resume', new_resume_path %>
